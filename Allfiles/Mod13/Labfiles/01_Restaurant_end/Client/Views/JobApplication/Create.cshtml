@using Client.Models
@model Client.Models.JobApplication

@{
    ViewData["Title"] = "Create";
}

<div class="row justify-content-center">
    <div class="col-5">
        <form method="post" enctype="multipart/form-data" asp-action="Create" id="submit-form">
            <div class="form-group row">
                <label asp-for="EmployeeRequirements" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-6">
                    <select asp-for="EmployeeRequirementsId" asp-items="ViewBag.EmployeeRequirements" class="form-control" placeholder="Job title" required>
                    </select>
                    <span asp-validation-for="EmployeeRequirementsId"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="FirstName" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-6">
                    <input asp-for="FirstName" type="text" class="form-control" placeholder="First Name" required>
                    <span asp-validation-for="FirstName"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="LastName" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-6">
                    <input asp-for="LastName" type="text" class="form-control" placeholder="Last Name" required>
                    <span asp-validation-for="LastName"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="PhoneNumber" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-6">
                    <input asp-for="PhoneNumber" type="number" class="form-control" placeholder="Number" required>
                    <span asp-validation-for="PhoneNumber"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Email" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-6">
                    <input asp-for="Email" type="email" class="form-control" placeholder="Email" required>
                    <span asp-validation-for="Email"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Address" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-6">
                    <input asp-for="Address" type="text" class="form-control" placeholder="Address" required>
                    <span asp-validation-for="Address"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-10">
                    <button id="btn-post" type="submit" class="btn btn-outline-success">
                        Apply For a Job
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>



@section Scripts{
    <script src="~/node_modules/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/node_modules/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/js/wanted-ad-post.js"></script>
}
