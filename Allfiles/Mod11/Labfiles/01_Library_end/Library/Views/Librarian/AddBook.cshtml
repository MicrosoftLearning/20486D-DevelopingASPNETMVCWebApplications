@model Library.Models.Book

@{
    ViewData["Title"] = "AddBook";
}

<h1 class="title">Add Book to Library</h1>
<div class="row justify-content-center">
    <div class="col-4">
        <form class="submit-form" method="post" enctype="multipart/form-data" asp-action="AddBook">
            <div class="form-group row">
                <label asp-for="Genre" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-6">
                    <select asp-for="GenreId" asp-items="ViewBag.GenreList" type="text" class="form-control" placeholder="Genres" required></select>
                    <span asp-validation-for="GenreId"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Name" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-6">
                    <input asp-for="Name" type="text" class="form-control" placeholder="Name" required>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Author" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-6">
                    <input asp-for="Author" type="text" class="form-control" placeholder="Author" required>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="DatePublished" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-6">
                    <input asp-for="DatePublished" type="date" class="form-control" placeholder="Published Date" required>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="PhotoAvatar" class="col-sm-4 col-form-label"></label>
                <div class="col-sm-6">
                    <input asp-for="PhotoAvatar" type="file" class="form-control" placeholder="Photo" required>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-10">
                    <button id="formButton" type="submit" class="btn btn-outline-primary">
                        Add a Book
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    <script src="~/node_modules/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/node_modules/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
}




